<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery_Module40.Pages.PinReEntered">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Confirm the PIN code" />
            <Entry x:Name="pinEntry" IsPassword="True" HorizontalTextAlignment="Center"/>
            <Button x:Name="buttonSubmit" Text="Ok" Clicked="ButtonOk_Clicked"/>
            <Button x:Name="buttonCancel" Text="Cancel" Clicked="ButtonCancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>